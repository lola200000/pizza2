    <section class="pizza-grid">

        {% for pizza in pizzas %}
            <article class="pizza-card">

                <img
                    src="{{ asset(pizza.image ?: 'images/pizzas/default.jpg') }}"
                    alt="{{ pizza.name }}"
                    class="pizza-image"
                >

                <div class="pizza-content">

                    <div class="pizza-header">
                        <h3>{{ pizza.name }}</h3>
                        <span class="pizza-price">
                            {{ pizza.prix }} â‚¬
                        </span>
                    </div>

                    <p class="pizza-description">
                        {{ pizza.description }}
                    </p>

                   
                    <a
                        href="{{ path('panier_add', { id: pizza.id }) }}"
                        class="btn-add"
                    >
                        + Ajouter au panier
                    </a>

                </div>
            </article>

        {% else %}
            <p class="no-pizza">
                Aucune pizza disponible pour le moment.
            </p>
        {% endfor %}

    </section>

    
